source 'https://rubygems.org'

#################################################
# Core
#################################################

gem 'rails', '4.2.3'
gem 'mysql2'
gem 'jquery-rails'

# Stylesheets
gem 'sass-rails'
gem 'bourbon'
gem 'neat'

# Javascript
gem 'coffee-rails'
gem 'uglifier'
gem 'therubyracer', platforms: :ruby

#################################################
# Environments
#################################################

group :production do
  gem 'unicorn'
end

group :development, :test do
  gem 'byebug'
  gem 'web-console', '~> 2.0'
  gem 'spring'
  gem 'quiet_assets'
end

#################################################
# APIs
#################################################

gem 'plaid'

#################################################
# Convenience
#################################################

gem 'turbolinks'
gem 'jbuilder'
gem 'bcrypt'
